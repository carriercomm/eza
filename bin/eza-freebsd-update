#!/bin/sh

eza-jls-id

eza-update

if [ "x" == "x${SQUID}" ]; then
    SQUID="10.7.7.1:3128"
fi

for name in `jls -h name | grep -v '^name$'` ; do

    env SQUID=${SQUID} eza-unlink-basejail ${name}
    if [ "squid" != "${name}" ]; then
        eza console -f -e "pkg update" ${name}
        eza console -f -e "pkg upgrade -y" ${name}
    fi

done
